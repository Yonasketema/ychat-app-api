generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  updateAt DateTime @updatedAt
  createAt DateTime @default(now())

  username String @unique
  password String

  sendChats       Message[] @relation("SendChats")
  receiveredChats Message[] @relation("ReceivedChats")

  @@index([username])
}

model Message {
  id       String   @id @default(uuid())
  updateAt DateTime @updatedAt
  createAt DateTime @default(now())

  sender   User   @relation("SendChats", fields: [senderId], references: [id])
  senderId String

  receiver   User   @relation("ReceivedChats", fields: [receiverId], references: [id])
  receiverId String

  text String

  @@index([senderId, receiverId])
}

model Chat {
  id       String   @id @default(uuid())
  updateAt DateTime @updatedAt
  createAt DateTime @default(now())

  users    String[]
  messages String[]
}
